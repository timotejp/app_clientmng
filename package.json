{
  "name": "maintenance-manager",
  "version": "1.0.0",
  "description": "Sistem za upravljanje vzdrževanja - Windows in Android aplikacija",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-electron": "npm run build && electron-builder",
    "server": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run start\"",
    "android": "cd android-app && npm start"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "express": "^4.21.2",
    "sqlite3": "^5.1.7",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.15",
    "cors": "^2.8.5",
    "axios": "^1.7.9",
    "react-router-dom": "^6.28.0",
    "react-datepicker": "^7.3.0",
    "react-select": "^5.8.0",
    "react-table": "^7.8.0",
    "react-icons": "^5.4.0",
    "styled-components": "^6.1.13"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.maintenance.manager",
    "productName": "Sistem za upravljanje vzdrževanja",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "server/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=11.6.2 <12"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
